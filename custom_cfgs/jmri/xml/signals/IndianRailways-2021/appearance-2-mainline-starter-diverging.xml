  <aspecttable>Indian Railways 2021</aspecttable>
  <name>3 Aspect Starter with Diverging</name>
  <description>One head with two aspects</description>
  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>dark</show>
      <show>green</show>
    </appearance>
    <appearance>
      <aspectname>Stop</aspectname>
      <show>dark</show>
      <show>red</show>
    </appearance>
    <appearance>
      <aspectname>Approach Diverging</aspectname>
      <show>yellow</show>
      <show>dark</show>
    </appearance>
  </appearances>
  <specificappearances>
    <!-- Start of Specific Appearances list -->
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>
  <!-- End of Specific Appearances list -->
  <aspectMappings>
    <!-- Start of Aspect Mapping -->
    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Stop</ourAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Approach Diverging</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Approach</ourAspect>
      <ourAspect>Approach Diverging</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
  </aspectMappings>
  <!-- End of Aspect Mapping -->
</appearancetable>
